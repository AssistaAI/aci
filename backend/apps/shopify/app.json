{
  "name": "SHOPIFY",
  "display_name": "Shopify",
  "logo": "https://raw.githubusercontent.com/aipotheosis-labs/aipolabs-icons/refs/heads/main/apps/shopify.svg",
  "provider": "Shopify Inc.",
  "version": "2023.10",
  "description": "\"Manage products, process orders, track inventory, and grow your online store effortlessly through simple chat commands.\"",
  "security_schemes": {
    "oauth2": {
      "type": "oauth2",
      "location": "header",
      "name": "Authorization",
      "prefix": "Bearer",
      "client_id": "{{ SHOPIFY_CLIENT_ID }}",
      "client_secret": "{{ SHOPIFY_CLIENT_SECRET }}",
      "authorization_url": "https://{shop}.myshopify.com/admin/oauth/authorize",
      "token_url": "https://{shop}.myshopify.com/admin/oauth/access_token",
      "scopes": {
        "read_products": "Read product data",
        "write_products": "Create and update products",
        "read_orders": "Read order data",
        "write_orders": "Create and update orders",
        "read_customers": "Read customer data",
        "write_customers": "Create and update customers",
        "read_inventory": "Read inventory data",
        "write_inventory": "Update inventory levels",
        "read_fulfillments": "Read fulfillment data",
        "write_fulfillments": "Create and update fulfillments",
        "read_shipping": "Read shipping data",
        "write_shipping": "Manage shipping settings",
        "read_discounts": "Read discount data",
        "write_discounts": "Create and update discounts",
        "read_price_rules": "Read price rules",
        "write_price_rules": "Create and update price rules",
        "read_content": "Read content data",
        "write_content": "Create and update content",
        "read_themes": "Read theme data",
        "write_themes": "Modify themes",
        "read_analytics": "Read analytics data",
        "read_checkouts": "Read checkout data",
        "write_checkouts": "Modify checkouts",
        "read_reports": "Read report data",
        "read_locations": "Read location data"
      }
    }
  },
  "default_security_credentials_by_scheme": {},
  "categories": [
    "E-commerce",
    "Online Store",
    "Inventory Management"
  ],
  "visibility": "public",
  "active": true
}