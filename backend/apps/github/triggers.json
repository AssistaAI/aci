[
  {
    "name": "GITHUB__PUSH",
    "description": "Triggered when code is pushed to a repository",
    "trigger_type": "push",
    "protocol": "webhook",
    "protocol_data": {
      "subscription_api": "GitHub REST API",
      "api_endpoint": "/repos/{owner}/{repo}/hooks",
      "event_type": "push",
      "verification_method": "hmac_sha256",
      "signature_header": "X-Hub-Signature-256",
      "event_header": "X-GitHub-Event",
      "delivery_header": "X-GitHub-Delivery"
    },
    "filters": {
      "type": "object",
      "properties": {
        "owner": {
          "type": "string",
          "description": "Repository owner (username or organization)",
          "examples": ["octocat", "github"]
        },
        "repo": {
          "type": "string",
          "description": "Repository name",
          "examples": ["Hello-World"]
        },
        "branch": {
          "type": "string",
          "description": "Optional branch name to filter push events",
          "examples": ["main", "develop"]
        }
      },
      "required": ["owner", "repo"]
    }
  },
  {
    "name": "GITHUB__PULL_REQUEST_OPENED",
    "description": "Triggered when a pull request is opened",
    "trigger_type": "pull_request",
    "protocol": "webhook",
    "protocol_data": {
      "subscription_api": "GitHub REST API",
      "api_endpoint": "/repos/{owner}/{repo}/hooks",
