[
  {
    "name": "SLACK__MESSAGE_CHANNELS",
    "description": "Triggered when a message is posted to any public channel the app is in",
    "trigger_type": "message.channels",
    "protocol": "webhook",
    "protocol_data": {
      "subscription_api": "Slack Events API",
      "event_type": "message.channels",
      "verification_method": "hmac_sha256",
      "signature_header": "X-Slack-Signature",
      "timestamp_header": "X-Slack-Request-Timestamp",
      "requires_oauth_scope": "channels:history"
    },
    "filters": {
      "type": "object",
      "properties": {
        "channel_id": {
          "type": "string",
          "description": "Optional channel ID to filter messages from specific channel",
          "examples": ["C1234567890"]
        }
      },
      "required": []
    }
  },
