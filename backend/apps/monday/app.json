        "assets:read": "Read accessible asset data",
        "boards:read": "View board data",
        "boards:write": "Modify board data",
        "docs:read": "Access user documents",
        "docs:write": "Edit user documents",
        "me:read": "Read profile information",
        "notifications:write": "Send notifications on user's behalf",
        "tags:read": "Access account tags",
        "teams:read": "View team information",
        "teams:write": "Modify team data",
        "updates:read": "View updates and replies",
        "updates:write": "Post or edit updates",
        "users:read": "Access user profile data",
        "users:write": "Modify user profiles",
        "webhooks:read": "View webhook configuration",
        "webhooks:write": "Create and modify webhooks",
        "workspaces:read": "Access workspace data",
        "workspaces:write": "Modify workspace data"
