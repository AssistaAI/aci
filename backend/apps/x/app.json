{
  "name": "X",
  "display_name": "X",
  "logo": "https://raw.githubusercontent.com/aipotheosis-labs/aipolabs-icons/refs/heads/main/apps/x.svg",
  "provider": "X Corp",
  "version": "v2",
  "description": "\"Post tweets, manage timelines, search content, and engage with followers through the X (Twitter) API v2.\"",
  "security_schemes": {
    "oauth2": {
      "location": "header",
      "name": "Authorization",
      "prefix": "Bearer",
      "client_id": "{{ X_CLIENT_ID }}",
      "client_secret": "{{ X_CLIENT_SECRET }}",
      "scope": "tweet.read tweet.write users.read follows.read follows.write offline.access",
      "authorize_url": "https://twitter.com/i/oauth2/authorize",
      "access_token_url": "https://api.twitter.com/2/oauth2/token",
      "refresh_token_url": "https://api.twitter.com/2/oauth2/token"
    }
  },
  "default_security_credentials_by_scheme": {},
  "categories": [
    "Social Media",
    "Communication",
    "Analytics"
  ],
  "visibility": "public",
  "active": true
}